<h1>Movies#edit</h1>
<%= form_with model:@movie, local:true do |f| %>

  <h4>映画タイトル</h4>
  <%= f.text_field :name %>

  <h4>映画画像</h4>
  <%= f.attachment_image_tag @movie, :image, :fill, 60, 60, fallback: "image.jpg"  %>

   <div id="review_stars">
    <label>評価</label>
  </div>
  <div class="actions">
    <h4>感想</h4>
  <%= f.text_area :body %>
    <%= f.submit '投稿'  %>
  </div>

<% end %>

<script>
  $('#review_stars').raty({
    starOn: "<%= asset_path('star-on.png') %>",
    starOff: "<%= asset_path('star-off.png') %>",
    starHalf: "<%= asset_path('star-half.png') %>",
    half: true,
    scoreName: 'movie[review]' //登録するモデル名とカラム名を記述
  });
</script>
